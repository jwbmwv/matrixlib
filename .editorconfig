# EditorConfig for MatrixLib
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,hpp,h,c}]
indent_style = space
indent_size = 4
max_line_length = 120

# CMake files
[{CMakeLists.txt,*.cmake,*.cmake.in}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

# YAML files (Zephyr module, CI/CD)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Kconfig files
[Kconfig*]
indent_style = space
indent_size = 4

# Configuration files
[*.{conf,prj}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Makefiles
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Git config
[.git*]
indent_style = space
indent_size = 2

# Shell Script
[*.sh]
indent_style = space
indent_size = 4

# Windows Command Script
[*.cmd]
end_of_line = crlf
indent_style = tab
indent_size = 8

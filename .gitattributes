# Git attributes for MatrixLib

# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.cpp text diff=cpp
*.hpp text diff=cpp
*.h text diff=cpp
*.c text diff=cpp

# CMake
CMakeLists.txt text
*.cmake text
*.cmake.in text

# Documentation
*.md text diff=markdown
*.txt text

# Configuration files
*.yaml text
*.yml text
*.json text
*.conf text
*.toml text
Kconfig* text
*.prj text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Git
.gitignore text
.gitattributes text
.gitmodules text

# Editor config
.editorconfig text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Archives
*.a binary
*.lib binary
*.so binary
*.dll binary
*.dylib binary
*.exe binary
*.out binary
*.elf binary
*.hex binary
*.bin binary

# Linguist overrides (for GitHub language statistics)
*.hpp linguist-language=C++
*.h linguist-language=C++
examples/* linguist-documentation=false
tests/* linguist-documentation=false
docs/* linguist-documentation
*.md linguist-documentation
